<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/_2sdp"
    android:paddingTop="@dimen/_2sdp"
    tools:background="@color/tththn_background_lv4">

    <RelativeLayout
        android:id="@+id/rl_topmenu1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/rl_spin_search"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@drawable/xml_tththn_rectangle11_empty"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iv_spin_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@null"
                android:minHeight="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_down_white" />

            <View
                android:id="@+id/v_32_sp_loaihom"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/iv_spin_search"
                android:background="@color/text_white"
                android:minHeight="@dimen/_24sdp"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/sp_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toLeftOf="@+id/v_32_sp_loaihom"
                android:background="@null"
                android:clickable="false"
                android:minHeight="@dimen/_24sdp"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/rl_spin_search"
            android:background="@color/text_white"
            android:visibility="gone"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_toRightOf="@+id/rl_spin_search"
            android:background="@drawable/xml_tththn_retangle_bottom_type2">
            <!--android:background="@drawable/xml_tththn_edittext"-->
            <ImageButton
                android:id="@+id/ibtn_clearsearch"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear_white" />

            <EditText
                android:id="@+id/et_search"
                style="@style/edittextStyle3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ibtn_clearsearch"
                android:background="@null"
                android:hint="Tìm..."
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_topmenu1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_ngay_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@color/tththn_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:scrollHorizontally="true"
                    android:scrollbars="horizontal"
                    android:singleLine="true"
                    tools:text="05/09/2017"
                    android:textColor="@color/text_white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_count_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/xml_tththn_rectangle"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="@dimen/_2sdp"
                    android:text="0"
                    android:textColor="@color/button_dark_orange"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_thongKe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/xml_tththn_retangle_bottom_type2"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Nhập đơn vị"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="@dimen/_5sdp"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:text="0 công tơ"
                android:textColor="@color/text_white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_9sdp"
                android:visibility="visible" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>