<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    tools:background="#403F51B5">


    <Button
        android:id="@+id/btn_cto_menu"
        style="@style/buttonStyle_menu_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:drawableLeft="@drawable/ic_love"
        android:text="Công tơ"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_bban_tuti_menu"
        style="@style/buttonStyle_menu_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:drawableLeft="@drawable/ic_tththn_bien_ban"
        android:text="B.Bản Tu Ti"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_chuyen_loaicto_menu"
        style="@style/buttonStyle_menu_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:drawableLeft="@drawable/ic_tththn_switch_congto"
        android:text="Chuyển loại tơ"
        android:textAllCaps="false" />


</LinearLayout>