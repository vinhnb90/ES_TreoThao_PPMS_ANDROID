<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:background="@drawable/xml_tththn_rectangle_select"
        android:elevation="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_row_chitiet_cto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:background="@color/tththn_submited_row_recyler"
            >

            <TextView
                android:id="@+id/tv_stt"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/xml_tththn_cricle_type4"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                tools:text="1" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_main_row_chitiet_cto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_tththn_rectangle"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/ll_t_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_no"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số No" />

                    <TextView
                        android:id="@+id/tv_so_no_cto"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_no"
                        tools:text="3464679" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_t_macto"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Mã công tơ" />

                    <TextView
                        android:id="@+id/tv_ma_cto"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_t_macto"
                        android:gravity="right"
                        tools:text="3464679" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary">

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/v_t_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_t_1"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/tththn_text_less_black" />


            <RelativeLayout
                android:id="@+id/ll_t_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_t_1"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/textStyle4"
                    android:id="@+id/tv_tenKH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Nguyễn Văn A" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_t_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_t_2"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/textStyle4"
                    android:gravity="right"
                    android:id="@+id/tv_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_t_diachi"
                    tools:text="Hà Nội" />
            </LinearLayout>

            <View
                android:id="@+id/v_t_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_t_3"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/tththn_text_less_black" />


            <LinearLayout
                android:id="@+id/ll_t_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_t_2"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_t_magcs"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã GCS" />

                    <TextView
                        android:id="@+id/tv_magcs"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_t_magcs"
                        tools:text="PD3464679" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_t_matram"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Mã Trạm" />

                    <TextView
                        android:id="@+id/tv_matram"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_t_matram"
                        android:gravity="right"
                        tools:text="ABCĐS" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_t_5_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_t_4"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_t_ngaytreothao"
                    style="@style/textStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày treo tháo" />

                <TextView
                    android:gravity="right"
                    android:id="@+id/tv_ngaytreothao"
                    style="@style/textStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_t_ngaytreothao"
                    tools:text="25/12/2017" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_t_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_t_5_1"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_t_chiso"
                    style="@style/textStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bộ chỉ số ghi" />

                <TextView
                    android:gravity="right"
                    android:id="@+id/tv_chiso"
                    style="@style/textStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_t_chiso"
                    tools:text="KT:35;VC:34" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>