<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invoice_np_background"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/invoice_dialog_chamno_rv_kh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="5.9" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/bg_linearlayout"
        android:columnCount="3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:rowCount="1">

        <TextView
            android:layout_columnSpan="1"
            android:text="Tổng tiền nợ: "
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_gravity="fill_vertical"
            android:gravity="center_vertical"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/invoice_dialog_cham_no_tv_tienno"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="1.000.000"
            android:gravity="center_vertical"
            android:textColor="@color/text_content"
            android:textSize="20sp" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:columnCount="3"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:rowCount="3">

        <Button
            android:id="@+id/invoice_dialog_chamno_bt_in_biennhan"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="5dp"
            android:text="In biên nhận"
            android:textSize="18sp"
            android:textColor="#8b0606"/>

        <Button
            android:id="@+id/invoice_dialog_chamno_bt_in_thongbao"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="5dp"
            android:text="In thông báo"
            android:textSize="18sp"
            android:textColor="#8b0606"/>

        <Button
            android:id="@+id/invoice_dialog_chamno_bt_huycham"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="5dp"
            android:text="Hủy chấm"
            android:textSize="18sp"
            android:textColor="#8b0606"/>

    </GridLayout>
</LinearLayout>