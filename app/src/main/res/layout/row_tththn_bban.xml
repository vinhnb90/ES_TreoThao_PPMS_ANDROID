<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/text_white"
        android:elevation="@dimen/_10sdp">

        <LinearLayout
            android:background="@drawable/xml_tththn_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:background="@color/tththn_submited_row_recyler">

                <TextView
                    android:id="@+id/tv_bb_stt"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/xml_tththn_cricle_type4"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:background="#ffffffff"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp">


                <RelativeLayout
                    android:id="@+id/ll_t_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bb_tenKH"
                        style="@style/textStyle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Nguyễn Văn A" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_t_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_t_01"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bb_diachi"
                        style="@style/textStyle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_t_diachi"
                        tools:text="PD3464679" />
                </LinearLayout>

                <View
                    android:id="@+id/v_t_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/ll_t_03"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@color/tththn_text_less_black" />

                <LinearLayout
                    android:id="@+id/ll_t_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_t_1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_bb_t_maKH"
                            style="@style/textStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mã khách hàng" />

                        <TextView
                            android:id="@+id/tv_bb_maKH"
                            style="@style/textStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_bb_t_maKH"
                            tools:text="3464679" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_t_ma_hdong"
                            style="@style/textStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Mã hợp đồng" />

                        <TextView
                            android:id="@+id/tv_bb_ma_hopdong"
                            style="@style/textStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_t_ma_hdong"
                            android:gravity="right"
                            tools:text="3464679" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary">

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_t_4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_t_1"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_bb_t_magcs"
                            style="@style/textStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mã GCS" />

                        <TextView
                            android:id="@+id/tv_bb_magcs"
                            style="@style/textStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_bb_t_magcs"
                            tools:text="PD3464679" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_bb_t_tramcapdien"
                            style="@style/textStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Trạm cấp điện" />

                        <TextView
                            android:id="@+id/tv_bb_tramcapdien"
                            style="@style/textStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_bb_t_tramcapdien"
                            android:gravity="right"
                            tools:text="ABCĐS" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_t_51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_t_4_1"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bb_t_lydo"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lý do treo tháo" />

                    <TextView
                        android:id="@+id/tv_bb_lydo"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_t_chiso"
                        tools:text="Thanh lý hợp đồng" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>