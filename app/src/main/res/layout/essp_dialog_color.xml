<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Chọn màu vẽ"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibtDong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@null"
            android:src="@mipmap/essp_delete" />
    </LinearLayout>
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#DDD"
	    android:gravity="center">
	    
	    <Button 
	        android:id="@+id/btnBlack"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_black"/>
	    
	    <Button 
	        android:id="@+id/btnWhite"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_white"/>
	    
	    <Button 
	        android:id="@+id/btnGray"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_gray"/>
	    
	    <Button 
	        android:id="@+id/btnRed"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_red"/>
	    
	    <Button 
	        android:id="@+id/btnBrown"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_brown"/>
	    
	    <Button 
	        android:id="@+id/btnYellow"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_yellow"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#DDD"
	    android:gravity="center">
	    
	    <Button 
	        android:id="@+id/btnDarkGreen"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_dark_green"/>
	    
	    <Button 
	        android:id="@+id/btnGreen"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_green"/>
	    
	    <Button 
	        android:id="@+id/btnBlue"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_blue"/>
	    
	    <Button 
	        android:id="@+id/btnLightBlue"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_light_blue"/>
	    
	    <Button 
	        android:id="@+id/btnPurple"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_purple"/>
	    
	    <Button 
	        android:id="@+id/btnPink"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/c_button_pink"/>
	</LinearLayout>
	
</LinearLayout>
