<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/text_white"
        android:elevation="@dimen/_2sdp">


        <LinearLayout
            android:id="@+id/history_upload_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_upload_tv_bb_stt"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/xml_tththn_cricle_type4"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:text="1" />

            <View
                android:id="@+id/history_upload_v_222"
                android:layout_width="1dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/tththn_text_less_black" />

            <LinearLayout
                android:id="@+id/history_upload_rv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/history_upload_rv_1"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/history_upload_tv_bb_tenKH"
                    style="@style/textStyle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"

                    tools:text="Nguyễn Văn A" />

                <TextView
                    android:id="@+id/history_upload_tv_bb_diachi"
                    style="@style/textStyle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/history_upload_tv_bb_tenKH"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    tools:text="PD3464679" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/history_upload_v_22"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/history_upload_ll_1"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@color/tththn_text_less_black" />

        <View
            android:id="@+id/history_upload_v_33"
            android:layout_width="1dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/history_upload_ll_1"
            android:layout_marginLeft="@dimen/_34sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:background="@color/tththn_text_less_black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history_upload_v_22"
            android:layout_toRightOf="@+id/history_upload_v_33"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/history_upload_ll_t_4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/history_upload_tv_bb_t_magcs"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã GCS" />

                    <TextView
                        android:id="@+id/history_upload_tv_bb_magcs"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/history_upload_tv_bb_t_magcs"
                        tools:text="PD3464679" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/history_upload_tv_bb_t_tramcapdien"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Trạm cấp điện" />

                    <TextView
                        android:id="@+id/history_upload_tv_bb_tramcapdien"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/history_upload_tv_bb_t_tramcapdien"
                        android:gravity="right"
                        tools:text="ABCĐS" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_upload_ll_t_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_upload_ll_t_4_1"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/history_upload_tv_bb_t_ngaytreothao"
                        style="@style/textStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày treo tháo" />

                    <TextView
                        android:id="@+id/history_upload_tv_bb_ngaytreothao"
                        style="@style/textStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/history_upload_tv_bb_t_ngaytreothao"
                        tools:text="3464679" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/history_upload_v_t_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/history_upload_ll_t_1"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/tththn_text_less_black" />

            <RelativeLayout
                android:id="@+id/history_upload_ll_t_52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_upload_v_t_2"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/history_upload_btn_bban_more"
                    style="@style/buttonStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="THÔNG TIN THÊM"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/history_upload_ibtn_notify"
                    style="@style/buttonStyle1_circle"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/history_upload_btn_bban_more"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_ttht_error" />

                <TextView
                    android:id="@+id/history_upload_tv_status_history_upload"
                    style="@style/textStyle2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/history_upload_ibtn_notify"
                    android:textStyle="italic|bold"
                    tools:text="GỬI THẤT BẠI" />


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>