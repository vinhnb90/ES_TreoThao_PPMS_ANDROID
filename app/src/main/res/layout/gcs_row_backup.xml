<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gcs_row_backup_tvBackupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4dff47"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/gcs_row_backup_tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textStyle="italic"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gcs_row_backup_tvBackupName"/>

    <ImageButton
        android:id="@+id/gcs_row_backup_ibDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@mipmap/invoice_ic_download"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"/>
</RelativeLayout>