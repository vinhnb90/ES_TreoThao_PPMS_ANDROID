<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/panel_background">

    <TextView
        android:id="@+id/dialog_cmd_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_unselected"
        android:padding="10dp"
        android:text="CMD"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_cmd_etCMD"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/dialog_cmd_tvTitle"
        android:layout_margin="10dp"
        android:background="@drawable/bg_button_black"
        android:padding="10dp"
        android:gravity="top|left"
        android:textColor="@color/text_white"
        android:textSize="18sp">

    </EditText>

    <Button
        android:id="@+id/dialog_cmd_btOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_cmd_etCMD"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_button_black"
        android:text="OK"
        android:textColor="@color/text_white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dialog_cmd_btClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_cmd_etCMD"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/dialog_cmd_btOK"
        android:background="@drawable/bg_button_black"
        android:text="Clear"
        android:textColor="@color/text_white"
        android:textSize="18sp" />

</RelativeLayout>