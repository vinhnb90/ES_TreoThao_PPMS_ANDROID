<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_unselected"
        android:padding="10dp"
        android:text="Bản vẽ kỹ thuật"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/essp_dialog_banve_lv_banve"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice">

    </ListView>

    <LinearLayout
        android:id="@+id/essp_dialog_banve_ll_banve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/essp_dialog_banve_iv_banve"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/essp_dialog_banve_bt_xoa_banve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/bg_button"
                android:text="Xóa"
                android:textColor="@color/text_white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/essp_dialog_banve_bt_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/bg_button"
                android:text="Vẽ"
                android:textColor="@color/text_white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>