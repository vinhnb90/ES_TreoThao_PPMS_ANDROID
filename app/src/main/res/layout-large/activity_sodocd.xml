<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".EsspSoDoCDActivity">

    <com.es.tungnv.draws.EsspCanvasView
        android:id="@+id/cvCanvas"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/llButton"
        android:layout_weight="12"
        android:background="#FFF" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_right"
        android:padding="3dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ibLine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:src="@mipmap/icon_draw_pen"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibShape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_shape"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibPoles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_power_roles"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibElectricityMeters"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_electricity_meters"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_text"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibUndo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_undo"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibEdit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_menu"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibSetting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_setting"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon"/>

        <ImageButton
            android:id="@+id/ibExit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_close_popup"
            android:padding="5dp"
            android:background="@drawable/border_draw_icon_pink"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="#0b5eb2"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_white"
            android:gravity="center"
            android:padding="3dp"
            android:text="Layer"
            android:textColor="#0b5eb2"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvLayer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ibDeleteLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@null"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:src="@mipmap/icon_draw_delete" />
    </LinearLayout>

</LinearLayout>
