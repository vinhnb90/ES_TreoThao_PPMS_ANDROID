<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invoice_np_background"
    android:padding="5dp">

    <TextView
        android:id="@+id/invoice_dialog_printer_tv_ten_thietbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thiết bị: "
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/invoice_dialog_printer_bt_tim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm"
        android:textSize="20sp"
        android:textColor="@color/text_content"
        android:background="@drawable/bg_button"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/invoice_dialog_printer_bt_tim"
        android:orientation="vertical">

        <ListView
            android:id="@+id/invoice_dialog_printer_lv_thietbi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </ListView>

        <Button
            android:id="@+id/invoice_dialog_printer_bt_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="In"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="@color/text_content"
            android:background="@drawable/bg_button"/>

    </LinearLayout>
</RelativeLayout>