<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_linearlayout"
                android:columnCount="1"
                android:padding="10dp"
                android:rowCount="3">

                <RelativeLayout
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Cấu hình phiên bản"
                        android:textColor="#8b0606"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/invoice_fragment_cauhinh_ib_luu_phienban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@null"
                        android:src="@mipmap/invoice_ic_save" />
                </RelativeLayout>

                <View
                    android:layout_height="2dp"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="#8b0606" />

                <Spinner
                    android:id="@+id/invoice_fragment_cauhinh_sp_phienban"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/invoice_np_spinner" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_linearlayout"
                android:columnCount="3"
                android:padding="10dp"
                android:rowCount="3">

                <RelativeLayout
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Đổi mật khẩu"
                        android:textColor="#8b0606"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/invoice_fragment_cauhinh_ib_luu_matkhau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@null"
                        android:src="@mipmap/invoice_ic_save" />
                </RelativeLayout>

                <View
                    android:layout_height="2dp"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="#8b0606" />

                <TextView
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Mật khẩu cũ: "
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/invoice_fragment_cauhinh_et_mk_cu"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="******"
                    android:inputType="textPassword"
                    android:padding="5dp" />

                <TextView
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="Mật khẩu mới: "
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/invoice_fragment_cauhinh_et_mk_moi"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="******"
                    android:inputType="textPassword"
                    android:padding="5dp" />

                <TextView
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="Nhập lại MK: "
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/invoice_fragment_cauhinh_et_nhap_lai_mk"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/bg_edittext"
                    android:hint="******"
                    android:inputType="textPassword"
                    android:padding="5dp" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_linearlayout"
                android:columnCount="3"
                android:padding="10dp"
                android:rowCount="3">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill|left"
                    android:text="Cấu hình logo (512 x 265 px)"
                    android:textColor="#8b0606"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_height="2dp"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="#8b0606" />

                <LinearLayout
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/invoice_fragment_cauhinh_iv_logo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="8"
                        android:background="@drawable/invoice_logo" />

                    <ImageButton
                        android:id="@+id/invoice_fragment_cauhinh_ib_chon_anh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:src="@mipmap/invoice_ic_chon_anh" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>

