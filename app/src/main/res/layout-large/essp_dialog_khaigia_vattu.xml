                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="HS điều chỉnh mtc "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_mtc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/essp_dialog_khaigia_vattu_cbVTuChinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:button="@drawable/essp_checkbox"
                android:paddingLeft="5dp"
                android:text="Vật tư chính"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_unselected"
                android:padding="5dp"
                android:text="Đơn giá gốc"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
