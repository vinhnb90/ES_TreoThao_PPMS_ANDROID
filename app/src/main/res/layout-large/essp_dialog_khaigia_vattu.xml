<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_unselected"
        android:padding="5dp"
        android:text="Khảo sát thông tin"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/essp_dialog_khaigia_vattu_tv_VatTu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Vật tư "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <AutoCompleteTextView
                    android:id="@+id/essp_dialog_khaigia_vattu_et_VatTu"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:completionThreshold="1"
                    android:imeOptions="actionSearch"
                    android:inputType="textNoSuggestions"
                    android:padding="5dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Đơn vị tính "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_donvi"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:inputType="textNoSuggestions"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Số lượng "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_SoLuong"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="HS điều chỉnh 1nc "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_1nc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="HS điều chỉnh 2nc "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_2nc"
