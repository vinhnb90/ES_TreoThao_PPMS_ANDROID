                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_dgMTCGoc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_unselected"
                android:padding="5dp"
                android:text="Đơn giá có điều chỉnh"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Đơn giá vật tư "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_dgVatTu"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Đơn giá nhân công "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_dgNhanCong"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Đơn giá MTC "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_dgMTC"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Đơn giá trước thuế "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_dgTruocThue"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="Giá trị trước thuế "
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/essp_dialog_khaigia_vattu_et_gtTruocThue"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="fill|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/essp_dialog_khaigia_vattu_bt_luu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Lưu"
        android:textColor="@color/text_white"
        android:textStyle="bold" />

</LinearLayout>