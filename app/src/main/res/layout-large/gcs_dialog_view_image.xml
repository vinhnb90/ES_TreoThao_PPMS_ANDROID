<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gcs_dialog_view_image_tvImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_unselected"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:text="Ảnh công tơ"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.es.tungnv.zoomImage.ImageViewTouch
        android:id="@+id/gcs_dialog_view_image_ivtImage"
        android:layout_width="match_parent"
        android:layout_below="@+id/gcs_dialog_view_image_tvImage"
        android:layout_height="match_parent"
        android:background="#000">
    </com.es.tungnv.zoomImage.ImageViewTouch>

    <ImageButton
        android:id="@+id/gcs_dialog_view_image_ibDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@mipmap/ic_delete_draw"
        android:layout_margin="10dp"/>

</RelativeLayout>