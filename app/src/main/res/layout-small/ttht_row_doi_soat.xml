<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginBottom="10dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:paddingBottom="10dp">

    <LinearLayout

        android:background="@drawable/bg_item_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_item_green_light"
                android:elevation="5dp"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/ttht_row_doisoat_tvSTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="1"
                    android:textColor="@color/text_content"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên Khách Hàng: "
                            android:textSize="@dimen/text_size_row_KH" />

                        <TextView
                            android:id="@+id/tv_ttht_row_doisoat_tenKH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nguyễn Văn A"
                            android:textSize="@dimen/text_size_row_KH" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ: "
                            android:textSize="@dimen/text_size_row_KH" />

                        <TextView
                            android:id="@+id/tv_ttht_row_doisoat_diachiKH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vũ Phạm Hàm"
                            android:textSize="@dimen/text_size_row_KH" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ttht_row_cto_lnCheck"
                        android:layout_width="@dimen/ib_doi_soat_height"
                        android:layout_height="@dimen/ib_doi_soat_height"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ib_ttht_row_doisoat_chon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/essp_checkbox"
                            android:scaleType="fitXY"
                            android:scaleX="0.5"
                            android:scaleY="0.5" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:text="Thông tin Công tơ Treo"
            android:textSize="@dimen/text_size_row_KH" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số No: "
                        android:textSize="@dimen/text_size_row_KH" />

                    <TextView
                        android:id="@+id/tv_ttht_row_doisoat_soNo_Treo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01346496-"
                        android:textSize="@dimen/text_size_row_KH" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chỉ số: "
                        android:textSize="@dimen/text_size_row_KH" />

                    <TextView
                        android:id="@+id/tv_ttht_row_doisoat_chiSo_Treo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BT:35 CD:32 TD:24 SG:25 VC:23"
                        android:textSize="@dimen/text_size_row_KH" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/iv_ttht_row_doisoat_anh_treo"
                    android:layout_width="@dimen/image_doi_soat_height"
                    android:layout_height="@dimen/image_doi_soat_height"
                    android:layout_gravity="right"
                    android:background="@drawable/image_not_found" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:text="Thông tin Công tơ Tháo"
            android:textSize="@dimen/text_size_row_KH" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số No: "
                        android:textSize="@dimen/text_size_row_KH" />

                    <TextView
                        android:id="@+id/tv_ttht_row_doisoat_soNo_thao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01346496-"
                        android:textSize="@dimen/text_size_row_KH" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chỉ số: "
                        android:textSize="@dimen/text_size_row_KH" />

                    <TextView
                        android:id="@+id/tv_ttht_row_doisoat_chiSo_thao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BT:35 CD:32 TD:24 SG:25 VC:23"
                        android:textSize="@dimen/text_size_row_KH" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/iv_ttht_row_doisoat_anh_thao"
                    android:layout_width="@dimen/image_doi_soat_height"
                    android:layout_height="@dimen/image_doi_soat_height"
                    android:layout_gravity="right"
                    android:background="@drawable/image_not_found" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>