    <item android:state_enabled="false" >
        <shape>
            <corners android:radius="5dp"></corners>
            <gradient android:angle="-90" android:startColor="@color/button_disable_light" android:endColor="@color/button_disable_dark"></gradient>
            <stroke android:color="#FFF" android:width="1dp"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="5dp"></corners>
            <gradient android:angle="-90" android:startColor="@color/tabMedium_light" android:endColor="@color/tabDark_light"></gradient>
            <stroke android:color="#FFF" android:width="1dp"></stroke>
        </shape>
    </item>
    <item >
        <shape>
            <corners android:radius="5dp"></corners>
            <gradient android:angle="-90" android:startColor="@color/tabMedium" android:endColor="@color/tabDark"></gradient>
            <stroke android:color="#FFF" android:width="1dp"></stroke>
        </shape>
    </item>

</selector>