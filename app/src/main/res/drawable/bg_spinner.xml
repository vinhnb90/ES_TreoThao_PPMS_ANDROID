<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <stroke android:width="1dip" android:color="@color/button_light" />
                    <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
                </shape>
            </item>
            <item android:bottom="5dp" android:right="5dp">
                <bitmap android:gravity="right|bottom" android:src="@mipmap/icon_arrow_spinner" />
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#cecece" />
                    <stroke android:width="1dip" android:color="#EEEEEE" />
                    <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
                </shape>
            </item>
            <item android:bottom="5dp" android:right="5dp">
                <bitmap android:gravity="right|bottom" android:src="@mipmap/icon_arrow_spinner" />
            </item>
        </layer-list>
    </item>
</selector>