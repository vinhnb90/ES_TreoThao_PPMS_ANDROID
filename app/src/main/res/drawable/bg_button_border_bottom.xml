<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#9EA3A8" />

            <stroke android:width="2dp" android:color="#FFFFFF" />

            <corners android:bottomLeftRadius="90dp" android:bottomRightRadius="90dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="-90" android:endColor="#025004" android:startColor="#147e17" />

            <stroke android:width="2dp" android:color="#FFFFFF" />

            <corners android:bottomLeftRadius="90dp" android:bottomRightRadius="90dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="-90" android:endColor="#f16520" android:startColor="#FB8246" />
            <!--<gradient android:angle="-90" android:endColor="#07700a" android:startColor="#3cbc3f" />-->

            <stroke android:width="2dp" android:color="#FFFFFF" />

            <corners android:bottomLeftRadius="90dp" android:bottomRightRadius="90dp" />
        </shape>
    </item>

</selector>