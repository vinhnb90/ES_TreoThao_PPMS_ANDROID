<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="10dp"></corners>
            <gradient android:angle="-90" android:startColor="@color/button_disable_light" android:endColor="@color/button_disable_dark"></gradient>
            <corners android:bottomRightRadius="90dp" android:topRightRadius="90dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="-90" android:startColor="@color/button_press_light" android:endColor="@color/button_press_dark"></gradient>
            <stroke android:color="#FFF" android:width="1dp"></stroke>
            <corners android:bottomRightRadius="90dp" android:topRightRadius="90dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="#FFF" android:width="1dp"></stroke>
            <gradient android:angle="-90" android:startColor="@color/button_light" android:endColor="@color/button_dark"></gradient>
            <corners android:bottomRightRadius="90dp" android:topRightRadius="90dp" />
        </shape>
    </item>

</selector>