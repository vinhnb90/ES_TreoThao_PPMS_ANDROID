<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:state_enabled="false" android:drawable="@drawable/invoice_np_button_2"></item>-->
    <!--<item android:state_pressed="true" android:drawable="@drawable/invoice_np_button_2"></item>-->
    <!--<item android:drawable="@drawable/invoice_np_button"></item>-->
    <item android:state_enabled="true" >
        <shape>
            <solid android:color="@color/colorPrimary"></solid>
            <corners android:radius="10dp"></corners>
            <stroke android:color="@color/text_white" android:width="2dp"></stroke>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid android:color="@color/button_disable_light_gray"></solid>
            <corners android:radius="10dp"></corners>
            <stroke android:color="@color/text_white" android:width="2dp"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/button_press_dark_orange"></solid>
            <corners android:radius="10dp"></corners>
            <stroke android:color="@color/text_white" android:width="2dp"></stroke>
        </shape>
    </item>


</selector>
