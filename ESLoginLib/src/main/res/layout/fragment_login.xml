<?xml version="1.0" encoding="utf-8"?><android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/cl_frag_login"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorPrimary"    tools:context="esolutions.com.esloginlib.example.LoginActivity">    <RelativeLayout        android:id="@+id/rl_search"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_above="@+id/ll_menu_bottom"        android:layout_alignParentTop="true"        android:layout_gravity="center_horizontal"        android:background="@color/colorPrimary"        android:gravity="center_vertical|center_horizontal"        android:paddingTop="@dimen/_20sdp">        <ImageView            android:id="@+id/iv_image_app"            android:layout_width="@dimen/_50sdp"            android:layout_height="@dimen/_50sdp"            android:layout_alignParentTop="true"            android:layout_centerHorizontal="true"            tools:background="@mipmap/ic_home" />        <TextView            android:id="@+id/tv_title_appname"            android:layout_width="@dimen/_250sdp"            android:layout_height="wrap_content"            android:layout_below="@+id/iv_image_app"            android:layout_centerHorizontal="true"            android:layout_marginTop="@dimen/_16sdp"            android:gravity="center"            tools:text="ES SOLUTIONS"            android:textAllCaps="false"            android:textColor="@color/colorPrimaryText"            android:textSize="@dimen/_16sdp" />        <LinearLayout            android:id="@+id/ll_1"            android:layout_width="@dimen/_200sdp"            android:layout_height="@dimen/_24sdp"            android:layout_below="@+id/tv_title_appname"            android:layout_centerHorizontal="true"            android:layout_marginTop="@dimen/_32sdp"            android:background="@color/colorPrimary"            android:orientation="horizontal">            <ImageView                android:layout_width="@dimen/_24sdp"                android:layout_height="match_parent"                android:src="@mipmap/ic_link" />            <EditText                android:id="@+id/et_url"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="@dimen/_16sdp"                android:background="@drawable/xml_et_bottom_border_white"                android:gravity="center_vertical"                android:hint="Đường dẫn máy chủ"                android:lines="1"                android:maxLines="1"                android:scrollHorizontally="true"                android:scrollbars="horizontal"                android:singleLine="true"                android:textColor="@color/colorPrimaryText"                android:textColorHint="@color/colorPrimaryText"                android:textCursorDrawable="@drawable/xml_cursor_white"                tools:text="192.168.68.204" />        </LinearLayout>        <LinearLayout            android:layout_centerHorizontal="true"            android:id="@+id/ll_include_login"            android:layout_width="@dimen/_200sdp"            android:layout_height="wrap_content"            android:layout_below="@+id/ll_1"            android:orientation="horizontal"></LinearLayout>        <LinearLayout            android:id="@+id/ll_2"            android:layout_width="@dimen/_200sdp"            android:layout_height="@dimen/_24sdp"            android:layout_below="@+id/ll_include_login"            android:layout_centerHorizontal="true"            android:layout_marginTop="@dimen/_16sdp"            android:background="@color/colorPrimary"            android:orientation="horizontal">            <ImageView                android:layout_width="@dimen/_24sdp"                android:layout_height="match_parent"                android:src="@mipmap/ic_user" />            <EditText                android:id="@+id/et_user"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="@dimen/_16sdp"                android:background="@drawable/xml_et_bottom_border_white"                android:gravity="center_vertical"                android:hint="Tài khoản"                android:lines="1"                android:maxLines="1"                android:scrollHorizontally="true"                android:scrollbars="horizontal"                android:singleLine="true"                android:textColor="@color/colorPrimaryText"                android:textColorHint="@color/colorPrimaryText"                android:textCursorDrawable="@drawable/xml_cursor_white"                tools:text="account01" />        </LinearLayout>        <RelativeLayout            android:id="@+id/ll_3"            android:layout_width="@dimen/_200sdp"            android:layout_height="@dimen/_24sdp"            android:layout_below="@+id/ll_2"            android:layout_centerHorizontal="true"            android:layout_marginTop="@dimen/_16sdp"            android:background="@color/colorPrimary"            android:orientation="horizontal">            <ImageView                android:id="@+id/iv_logo_2"                android:layout_width="@dimen/_24sdp"                android:layout_height="match_parent"                android:layout_alignParentLeft="true"                android:src="@mipmap/ic_pass" />            <RelativeLayout                android:id="@+id/rl_visible"                android:layout_width="@dimen/_24sdp"                android:layout_height="match_parent"                android:layout_alignParentRight="true"                android:background="@drawable/xml_et_bottom_border_white">                <ImageButton                    android:id="@+id/ibtn_visible_pass"                    android:layout_width="@dimen/_24sdp"                    android:layout_height="match_parent"                    android:background="@null"                    android:scaleType="centerCrop"                    android:src="@mipmap/ic_visible" />            </RelativeLayout>            <EditText                android:id="@+id/et_pass"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="@dimen/_16sdp"                android:layout_toLeftOf="@+id/rl_visible"                android:layout_toRightOf="@+id/iv_logo_2"                android:background="@drawable/xml_et_bottom_border_white"                android:gravity="center_vertical"                android:hint="Mật khẩu"                android:inputType="textPassword"                android:lines="1"                android:maxLines="1"                android:scrollHorizontally="true"                android:scrollbars="horizontal"                android:singleLine="true"                android:textColor="@color/colorPrimaryText"                android:textColorHint="@color/colorPrimaryText"                android:textCursorDrawable="@drawable/xml_cursor_white"                tools:text="*******" />        </RelativeLayout>        <RelativeLayout            android:id="@+id/rl_4"            android:layout_width="@dimen/_200sdp"            android:layout_height="@dimen/_24sdp"            android:layout_below="@+id/ll_3"            android:layout_centerHorizontal="true"            android:layout_marginTop="@dimen/_32sdp"            android:background="@color/colorPrimary"            android:orientation="horizontal">            <android.support.v7.widget.AppCompatCheckBox                android:id="@+id/cb_save_info"                android:layout_width="@dimen/_24sdp"                android:layout_height="match_parent"                android:layout_alignParentLeft="true"                app:buttonTint="@color/colorPrimaryText"                tools:checked="true" />            <TextView                android:id="@+id/tv_save_info"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignBaseline="@+id/cb_save_info"                android:layout_marginLeft="@dimen/_16sdp"                android:layout_toRightOf="@+id/cb_save_info"                android:text="Lưu thông tin"                android:textColor="@color/colorPrimaryText" />            <Button                android:id="@+id/btn_login"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_alignParentRight="true"                android:layout_marginLeft="@dimen/_16sdp"                android:layout_toRightOf="@+id/tv_save_info"                android:background="@color/colorAccent"                android:text="ĐĂNG NHẬP"                android:textColor="@color/colorPrimaryText"                android:textSize="@dimen/_10sdp"                android:visibility="visible" />            <ProgressBar                android:id="@+id/pbar_login"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_alignParentRight="true"                android:layout_marginLeft="@dimen/_16sdp"                android:layout_toRightOf="@+id/tv_save_info"                android:background="@color/colorAccent"                android:indeterminateTint="@color/colorPrimaryText"                android:indeterminateTintMode="src_in"                android:padding="@dimen/_2sdp"                android:textColor="@color/colorPrimaryText"                android:textSize="@dimen/_10sdp"                android:visibility="gone" />            <!-- <TextView                 android:layout_width="match_parent"                 android:layout_height="match_parent"                 android:layout_marginLeft="@dimen/_16sdp"                 android:background="@drawable/xml_et_bottom_border_white"                 android:gravity="center_vertical"                 android:hint="Mật khẩu"                 android:inputType="textPassword"                 android:lines="1"                 android:maxLines="1"                 android:scrollHorizontally="true"                 android:scrollbars="horizontal"                 android:singleLine="true"                 android:textColor="@color/colorPrimaryText"                 android:textCursorDrawable="@drawable/xml_cursor_white"                 tools:text="*******" />-->        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:padding="@dimen/_10sdp">            <TextView                android:id="@+id/tv_es"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentTop="true"                android:gravity="right"                android:text="Phần mềm bản quyền công ty ESolution"                android:textColor="@color/colorPrimaryText" />            <TextView                android:layout_below="@+id/tv_es"                android:id="@+id/tv_version"                android:layout_alignParentRight="true"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textColor="@color/colorPrimaryText"                tools:text="Phiên bản phần mềm 5.6.6" />            <TextView                android:layout_alignParentRight="true"                android:id="@+id/tv_imei"                android:layout_below="@+id/tv_version"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:gravity="right"                android:textColor="@color/colorPrimaryText"                tools:text="IMEI 359867061267687" />        </RelativeLayout>    </RelativeLayout></android.support.design.widget.CoordinatorLayout>