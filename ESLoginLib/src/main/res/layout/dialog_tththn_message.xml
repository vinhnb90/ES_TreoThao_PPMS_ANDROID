        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_11">

            <View
                android:id="@+id/v_l_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#90000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_below="@+id/v_l_1"
                android:background="@drawable/xml_tththn_retangle_top"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:background="#fff"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/btn_huy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="HỦY THAO TÁC"
                    android:textColor="#90000000" />

                <View
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/v_mid_dialog"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="#90000000" />

                <Button
                    android:background="#fff"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/btn_tieptuc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TIẾP TỤC"
                    android:textColor="@android:color/holo_orange_dark" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>